<% if notice %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= notice %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<div class="container-fluid mt-4">
  <div class="row">
    <div class="col-12">
      <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center mb-4">
        <h1 class="mb-3 mb-sm-0"><%= t('titles.timelines') %></h1>

        <div class="actions">
          <%= link_to new_timeline_path, class: 'btn btn-primary' do %>
            <i class="fas fa-plus me-1"></i><%= t('titles.new_timeline') %>
          <% end %>
        </div>
      </div>

      <div class="table-responsive">
        <table class="table table-hover align-middle">
          <tbody>
            <% @timelines.each do |timeline| %>
              <tr class="py-3 border-top-0">
                <td class="py-3">
                  <%= link_to timeline_path(timeline), class: "text-decoration-none d-block text-break" do %>
                    <strong><%= timeline.name %></strong>
                  <% end %>
                </td>
                <td class="py-3 text-center">
                  <span class="badge bg-light text-secondary">
                    <%= timeline.events.count %> <%= t('events_count', count: timeline.events.count) %>
                  </span>
                </td>
                <td class="text-end py-3">
                  <%= link_to edit_timeline_path(timeline), 
                            class: 'text-secondary text-decoration-none d-inline-flex align-items-center',
                            title: t('actions.edit') do %>
                    <i class="fas fa-edit"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
