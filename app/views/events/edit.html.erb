<h1><%= t('titles.edit_event') %></h1>

<div class="actions">
  <%= link_to timeline_event_path(@timeline, @event), class: 'icon-link' do %>
    <i class="fas fa-arrow-left"></i> <%= t('actions.back_to_event') %>
  <% end %>
</div>

<%= form_with(model: [@timeline, @event], local: true) do |form| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> <%= t('messages.event_errors') %></h2>
      <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, t('labels.name') %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description, t('labels.description') %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :start_date, t('labels.start_date') %>
    <%= form.date_field :start_date %>
  </div>

  <div class="field">
    <%= form.label :end_date, t('labels.end_date') %>
    <%= form.date_field :end_date %>
  </div>

  <div class="actions">
    <%= form.submit t('actions.update_event') %>
  </div>
<% end %> 