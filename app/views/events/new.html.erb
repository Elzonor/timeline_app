<h1><%= t('titles.new_event') %></h1>

<div class="actions">
  <%= link_to t('actions.back_to_timeline'), timeline_path(@timeline) %>
</div>

<%= form_with(model: [@timeline, @event], local: true) do |form| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> <%= t('messages.event_errors') %></h2>
      <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, t('labels.name') %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description, t('labels.description') %>
    <%= form.text_area :description %>
  </div>

  <div class="actions">
    <%= form.submit t('actions.create_event') %>
  </div>
<% end %> 