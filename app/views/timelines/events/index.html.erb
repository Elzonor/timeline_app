<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <%= render 'shared/flash_messages' %>

      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><%= t('titles.events') %></h1>
        <%= link_to new_timeline_event_path(@timeline), class: 'btn btn-primary' do %>
          <i class="fas fa-plus me-1"></i><%= t('actions.new_event') %>
        <% end %>
      </div>

      <div class="table-responsive">
        <table class="table table-hover align-middle">
          <thead class="table-light">
            <tr>
              <th><%= t('labels.name') %></th>
              <th><%= t('labels.description') %></th>
              <th class="text-end"><%= t('labels.actions') %></th>
            </tr>
          </thead>

          <tbody>
            <% @events.each do |event| %>
              <tr>
                <td><%= event.name %></td>
                <td><%= truncate(event.description, length: 100) %></td>
                <td class="text-end">
                  <%= link_to timeline_event_path(@timeline, event), 
                            class: 'btn btn-sm btn-outline-secondary me-1',
                            title: t('actions.show') do %>
                    <i class="fas fa-eye"></i>
                  <% end %>
                  <%= link_to edit_timeline_event_path(@timeline, event), 
                            class: 'btn btn-sm btn-outline-primary me-1',
                            title: t('actions.edit') do %>
                    <i class="fas fa-edit"></i>
                  <% end %>
                  <%= button_to timeline_event_path(@timeline, event), 
                            method: :delete,
                            class: 'btn btn-sm btn-outline-danger d-inline-block',
                            form: { class: 'd-inline-block' },
                            title: t('actions.delete'),
                            data: { turbo_confirm: t('messages.confirm') } do %>
                    <i class="fas fa-trash"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
